<UserControl x:Class="JET_OS.Taskbar.TaskbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JET_OS.Taskbar"
             xmlns:services="clr-namespace:JET_OS.Services"
             Height="60" Background="Transparent">
    <UserControl.Resources>
        <local:ReferenceEqualsConverter x:Key="ReferenceEqualsConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{x:Static local:TaskbarService.Instance}" />
    </UserControl.DataContext>
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <ItemsControl ItemsSource="{Binding Windows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="IconBorder"
                                Margin="8,0"
                                Padding="6"
                                CornerRadius="12"
                                Background="Transparent"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.5" />
                            </Border.Effect>
                            <Grid>
                                <Image Source="{Binding Icon}" Width="32" Height="32" Stretch="Uniform" />
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding DataContext.FocusedWindow.Window, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter TargetName="IconBorder" Property="BorderBrush" Value="Transparent" />
                            </DataTrigger>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualsConverter}">
                                        <Binding Path="Window" />
                                        <Binding Path="DataContext.FocusedWindow.Window" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter TargetName="IconBorder" Property="BorderBrush" Value="#80FFFFFF" />
                                <Setter TargetName="IconBorder" Property="Background" Value="#20FFFFFF" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <EventSetter Event="MouseLeftButtonUp" Handler="TaskbarIcon_Click" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
