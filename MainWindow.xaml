<Window x:Class="JET_OS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JET_OS"
        xmlns:taskbar="clr-namespace:JET_OS.Taskbar"
        mc:Ignorable="d"
        Title="JET-OS"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A237E" Offset="0.0"/>
            <GradientStop Color="#0D133D" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <!-- Account Management Icon in the upper right corner -->
            <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,40,60,0" Width="120">
                <StackPanel HorizontalAlignment="Center">
                    <Button x:Name="AccountManagementButton" Width="80" Height="80" Padding="0" Cursor="Hand"
                            ToolTip="Account Management"
                            Background="#40FFFFFF"
                            BorderBrush="#80FFFFFF"
                            BorderThickness="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Click="AccountManagementButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="6" Opacity="0.5"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="#40FFFFFF" Stroke="#80FFFFFF" StrokeThickness="2"/>
                                    <Image Source="pack://application:,,,/Media/useraccount.png" Width="38" Height="38" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.6" />
                                        </Image.Effect>
                                    </Image>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Text="Account Management"
                               FontSize="13"
                               Foreground="#CCFFFFFF"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <!-- Logged In User Info (upper right corner) -->
            <TextBlock x:Name="LoggedInInfoText"
                       FontSize="12"
                       Foreground="#FFFFD700"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,10,40,0"
                       Text=""
                       TextAlignment="Right"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="JET-OS"
                           FontSize="150"
                           FontWeight="Bold"
                           Foreground="#33FFFFFF"
                           HorizontalAlignment="Center"
                           TextAlignment="Center" Margin="0,0,0,-30"/>
                <TextBlock Text="JUSTICE ENHANCEMENT TECHNOLOGY"
                           FontSize="24"
                           Foreground="#33FFFFFF"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
            <!-- Taskbar at the bottom -->
            <Grid VerticalAlignment="Bottom" Height="60" Background="#3B6DC6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>
                <!-- Centered taskbar icons -->
                <taskbar:TaskbarControl Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <!-- Date/Time right-aligned -->
                <TextBlock x:Name="TaskbarClock"
                           Grid.Column="2"
                           FontSize="20"
                           Foreground="White"
                           Margin="0,0,20,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           TextAlignment="Right"
                           Width="180"/>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
