<Window x:Class="JET_OS.Windows.AccountManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Management"
        Width="1200" Height="600"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Media/useraccount.png">
    <Window.Background>
        <SolidColorBrush Color="#2A4B8D"/>
    </Window.Background>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" Margin="20">
            <!-- Profile Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="User Profile" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <Ellipse Width="100" Height="100" Stroke="#80FFFFFF" StrokeThickness="2" Margin="0,0,0,10">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/Media/useraccount.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Button Content="Upload Image" Height="28" Margin="0,0,0,10"/>
                    <TextBlock Text="Full Name" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Role (e.g. Judge, Officer)" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Department/Agency" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Badge/ID Number" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Email Address" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Phone Number" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                </StackPanel>
            </Border>
            <!-- Security Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Security" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <TextBlock Text="Change Password" Foreground="#FFD700"/>
                    <PasswordBox Margin="0,0,0,8"/>
                    <Button Content="Update Password" Height="28" Margin="0,0,0,10"/>
                    <CheckBox Content="Enable Two-Factor Authentication (2FA)" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="Security Questions" Foreground="#FFD700" FontWeight="SemiBold" Margin="0,10,0,4"/>
                    <TextBlock Text="Mother's maiden name?" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,4"/>
                    <TextBlock Text="First pet's name?" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,4"/>
                    <TextBlock Text="Recent Login History" Foreground="#FFD700" FontWeight="SemiBold" Margin="0,10,0,4"/>
                    <ListBox Height="60">
                        <ListBoxItem>2024-06-01 08:12 - Success</ListBoxItem>
                        <ListBoxItem>2024-05-31 17:45 - Success</ListBoxItem>
                        <ListBoxItem>2024-05-31 08:01 - Failed</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>
            <!-- Permissions Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Permissions &amp; Access" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <ComboBox Margin="0,0,0,8">
                        <ComboBoxItem>Judge</ComboBoxItem>
                        <ComboBoxItem>Police Officer</ComboBoxItem>
                        <ComboBoxItem>Attorney</ComboBoxItem>
                        <ComboBoxItem>Registrar</ComboBoxItem>
                        <ComboBoxItem>Admin</ComboBoxItem>
                    </ComboBox>
                    <CheckBox Content="Access to Case Files" Foreground="White"/>
                    <CheckBox Content="Access to Evidence" Foreground="White"/>
                    <CheckBox Content="Can Approve Warrants" Foreground="White"/>
                    <CheckBox Content="Can Edit User Accounts" Foreground="White"/>
                    <CheckBox Content="Can View Audit Logs" Foreground="White"/>
                    <CheckBox Content="Can Manage Devices" Foreground="White"/>
                </StackPanel>
            </Border>
            <!-- Notifications Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Notifications" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <CheckBox Content="Email Alerts" Foreground="White"/>
                    <CheckBox Content="SMS Alerts" Foreground="White"/>
                    <CheckBox Content="System Announcements" Foreground="White"/>
                    <CheckBox Content="Case Updates" Foreground="White"/>
                    <CheckBox Content="Hearing Reminders" Foreground="White"/>
                </StackPanel>
            </Border>
            <!-- Preferences Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Preferences" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <TextBlock Text="Theme" Foreground="#FFD700"/>
                    <ComboBox Margin="0,0,0,8">
                        <ComboBoxItem>System Default</ComboBoxItem>
                        <ComboBoxItem>Light</ComboBoxItem>
                        <ComboBoxItem>Dark</ComboBoxItem>
                        <ComboBoxItem>High Contrast</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="Language" Foreground="#FFD700"/>
                    <ComboBox Margin="0,0,0,8">
                        <ComboBoxItem>English</ComboBoxItem>
                        <ComboBoxItem>Spanish</ComboBoxItem>
                        <ComboBoxItem>French</ComboBoxItem>
                        <ComboBoxItem>Other...</ComboBoxItem>
                    </ComboBox>
                    <CheckBox Content="Enable Accessibility Features" Foreground="White"/>
                    <CheckBox Content="Show Tooltips" Foreground="White"/>
                </StackPanel>
            </Border>
            <!-- Legal/Compliance Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Legal &amp; Compliance" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <TextBlock Text="Audit Log" Foreground="#FFD700" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ListBox Height="60">
                        <ListBoxItem>2024-06-01: Accessed Case #12345</ListBoxItem>
                        <ListBoxItem>2024-05-30: Edited User Profile</ListBoxItem>
                        <ListBoxItem>2024-05-29: Downloaded Evidence</ListBoxItem>
                    </ListBox>
                    <CheckBox Content="Accept Terms of Use" Foreground="White"/>
                    <CheckBox Content="Acknowledge Privacy Policy" Foreground="White"/>
                    <TextBlock Text="Certifications" Foreground="#FFD700" FontWeight="SemiBold" Margin="10,10,0,4"/>
                    <TextBox/>
                </StackPanel>
            </Border>
            <!-- Emergency/On-call Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Emergency / On-Call" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <CheckBox Content="Available for Emergency Callouts" Foreground="White"/>
                    <TextBlock Text="On-call Contact Number" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                    <TextBlock Text="Preferred Hospital / Facility" Foreground="#FFD700"/>
                    <TextBox Margin="0,0,0,8"/>
                </StackPanel>
            </Border>
            <!-- Device Management Section -->
            <Border Background="#223B6DC6" CornerRadius="12" Margin="0,0,20,0" Padding="20" Width="350">
                <StackPanel>
                    <TextBlock Text="Device Management" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                    <ListBox Height="60">
                        <ListBoxItem>Laptop - Last Sync: 2024-06-01</ListBoxItem>
                        <ListBoxItem>Mobile - Last Sync: 2024-05-30</ListBoxItem>
                    </ListBox>
                    <Button Content="Add Device" Height="28" Margin="0,10,0,0"/>
                    <Button Content="Remove Selected Device" Height="28" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
